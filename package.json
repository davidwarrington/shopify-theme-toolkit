{
  "name": "shopify-theme-toolkit",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch"
  },
  "devDependencies": {
    "@davidwarrington/eslint-config": "^2.3.2",
    "@davidwarrington/prettier-config": "^2.2.3",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4"
  },
  "dependencies": {
    "tsdown": "^0.12.7"
  },
  "engines": {
    "node": ">=23.11.0"
  },
  "packageManager": "pnpm@10.10.0"
}
